<h1>Add a new course: </h1>


<%= form_with model: @course, url: courses_path do |form| %>
  <h2> First name: </h2> <%= form.text_field :first_name %>
  <h2> Last name: </h2> <%= form.text_field :last_name %>
  <h2> Age of the student: </h2> <%= form.text_field :age %>
  <h2> Highest level of education: </h2> <%= form.text_field :highest_level_of_education %>
  <%= form.hidden_field :cohort_id, value: @cohort_id %>
  </br>
  </br>
  </br>
  <%= form.submit %>
<% end %>
